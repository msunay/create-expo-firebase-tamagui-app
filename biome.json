{
  "files": {
    "include": ["./src/**/*.tsx", "./src/**/*.ts", "./app/**/*.tsx", "./app/**/*.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 90
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "arrowParentheses":"asNeeded"
    }
  }
}